{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node10",
    "module": "ES2022",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      } /* Transform paths in output .js files */,
      {
        "transform": "typescript-transform-paths" /* Transform paths in output .d.ts files */,
        "afterDeclarations": true
      }
    ],
    "paths": {
      "src/*": ["./src/*"],
      "dev/*": ["./src/dev/*"],
      "@types": ["./src/types/index"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
